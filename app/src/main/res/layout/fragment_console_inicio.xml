<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tk.trocagame.trocagame.view.fragments.ConsoleInicioFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_console_game_horizontal_margin"
                android:textSize="@dimen/tv_list_label_size"
                android:textColor="@color/colorWhite"
                android:text="Ofertas em alta" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_console_inicio_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:context=".view.fragment.ConsoleInicioFragment"
                tools:listitem="@layout/card_console_game"/>

            <TextView
                android:id="@+id/tv_main_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_console_game_horizontal_margin"
                android:textSize="@dimen/tv_list_label_size"
                android:textColor="@color/colorWhite"
                android:text="Mais desejados" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_console_inicio_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:context=".view.fragment.ConsoleInicioFragment"
                tools:listitem="@layout/card_console_game"/>

            <TextView
                android:id="@+id/tv_main_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_console_game_horizontal_margin"
                android:textSize="@dimen/tv_list_label_size"
                android:textColor="@color/colorWhite"
                android:text="RecomandaÃ§oes" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_console_inicio_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:context=".view.fragment.ConsoleInicioFragment"
                tools:listitem="@layout/card_console_game"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
